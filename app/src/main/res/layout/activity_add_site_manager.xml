<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".view.AddSiteManager">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="9dp"
            android:text="Enter Site Manager Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:text="Assign ID to a manager"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_id_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager Position"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_position_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager First Name"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager Middle Name"
            android:textStyle="bold"

            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_middle_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager Last Name"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_last_name_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager Contact Number"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_contact_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="9dp"
            android:text="Site Manager Email"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/site_manager_email_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edittext"
            android:inputType="text" />

        <Button
            android:id="@+id/add_site_manager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#FF7A39"
            android:shadowColor="#FF7A39"
            android:text="Add Manager"
            android:textColor="#FFFFFF"
            android:textColorHint="#FF7A39"
            app:iconTint="@android:color/holo_orange_dark"
            app:strokeColor="#FF7A39" />
    </LinearLayout>

</LinearLayout>